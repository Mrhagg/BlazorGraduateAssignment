@if (Race == null)
{
    <p>No race chosen yet.</p>
}
else
{
    <div class="race-details">
        <h4 class="faction">@Race.Name</h4>

        <img src="@Race.ImageUrl" alt="@Race.Name" />


        <p>@Race.Description</p>

        <h5 class="abilities">Racial Abilities</h5>
        <ul>
            @foreach (var ability in Race.RacialAbilities ?? new List<string> { "Ingen data" })
            {
                <li>@ability</li>
            }
        </ul>

        <h5 class="classes">Allowed Classes and Roles</h5>
        <ul>
            @foreach (var c in Race.AllowedClasses ?? new List<ClassDto>())
            {
                <li>@c.Name (@c.Role)</li>
            }
        </ul>
    </div>
}

@code {
    [Parameter]
    public CharacterRaceDto? Race { get; set; }
}
